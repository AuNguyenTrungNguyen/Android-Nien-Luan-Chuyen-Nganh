<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_my_account"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Dung glide load background-->
            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_slideshow" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#ebca0707"
                android:elevation="4dp"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="26dp"
                    android:layout_toEndOf="@+id/edt_full_name"
                    android:layout_toRightOf="@+id/edt_full_name"
                    android:src="@drawable/ic_edit" />


                <EditText
                    android:lines="1"
                    android:id="@+id/edt_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:inputType="textCapWords"
                    android:text="Administrator"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:enabled="false"
                    android:id="@+id/tv_type_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_full_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="CEO"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln_birthday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="@string/birth_day"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:textColor="#000" />

                <TextView
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/tv_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_phone"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ln_birthday"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="@string/phone"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:inputType="date"/>

                <EditText
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:id="@+id/edt_phone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_address"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ln_phone"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="@string/address"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="#000" />

                <EditText
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:id="@+id/edt_address"
                    android:inputType="textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Can Tho"
                    />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
