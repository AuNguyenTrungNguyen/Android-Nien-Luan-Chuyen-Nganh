<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aunguyen.quanlycongviec">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity" />

        <activity android:name=".Activity.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.ManageMyAccountActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="@string/title_activity_my_account"/>

        <activity android:name=".Activity.ManageMyEmployeesActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="@string/title_activity_my_employees"/>

        <activity android:name=".Activity.InformationActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="@string/title_activity_information"/>

        <activity android:name=".Activity.AboutMeActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:label="@string/title_activity_about_me"></activity>
    </application>

</manifest>